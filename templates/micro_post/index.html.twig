{% extends 'base.html.twig' %}

{% block title %} all post{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <small class="d-block text-right mt-3">
        <a href="{{ path('micro_post_add') }}">Add new</a>
    </small>
    <h6 class="border-bottom border-gray pb-2 mb-0">Recent update</h6>

    {% for post in posts %}

        {{ include('micro_post/raw-post.html.twig', {'post': post}) }}


        <small class="d-block text-right mt-3">
            {% if is_granted('edit', post) %}
                <a href="{{ path('micro_post_edit', {'id': post.id}) }}">Edit</a>
            {% endif %}
            {% if is_granted('delete', post) %}
                <a href="{{ path('micro_post_delete', {'id': post.id}) }}">Delete</a>
            {% endif %}
        </small>
    {% endfor %}
{% endblock %}
